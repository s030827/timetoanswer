<h1>Admins</h1>
<p>Find me in app/views/admins_backoffice/admins/index.html.erb</p>

<table class="table is-striped is-narrow is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>Id</th>
      <th>E-mail</th>
      <th></th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Id</th>
      <th>E-mail</th>
      <th></th>
    </tr>
  </tfoot>
  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <th><%= admin.id %></th>
        <td><%= admin.email %></td>
        <td class="is-flex-widescreen ">

          <%= link_to edit_admins_backoffice_admin_path(admin) do %>
            <span class="icon">
              <i class="fas fa-user-edit"></i>
            </span>
          <% end %>

          <span class="icon">
            <i class="fas fa-user-minus"></i>
          </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>